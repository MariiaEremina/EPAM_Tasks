@model Shared.Reward
@{

    Layout = "~/Views/Shared/_Layout.cshtml";

    if (Model.Title == default(string))
    {
        ViewBag.Title = "Add";
    }
    else
    {
        ViewBag.Title = "Edit";
    }

    Shared.Reward thisReward = Model;
}

@{
    if (Model.ID == default(int))
    {
        <h3>Add Reward</h3>
    }
    else
    {
        <h3>Edit Reward</h3>
    }
}

<form action="Save" method="post">
    <input name="Id" style="display: none;" value="@thisReward.ID" />
    <div class="form-group">
        <label for="Title">Title</label>
        <input name="Title" type="text" class="form-control" id="Title" value="@thisReward.Title" />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input name="Description" type="text" class="form-control" id="Description" value="@thisReward.Description" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn">Save</button>
        @Html.ActionLink("Cancel", "Index", "User")
    </div>
</form>

